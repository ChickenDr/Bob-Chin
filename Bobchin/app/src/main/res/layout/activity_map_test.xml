<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MapTestActivity">

        <RelativeLayout
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        <ImageButton
                android:id="@+id/button_center_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_center_point"
                android:background="#FFB03B"
                app:layout_constraintBottom_toTopOf="@id/button_add_map_pin"
                app:layout_constraintEnd_toEndOf="parent" />

        <Button
                android:id="@+id/button_add_map_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:text="해당 위치 추가하기"
                app:layout_constraintBottom_toBottomOf="@+id/map_view" />

</androidx.constraintlayout.widget.ConstraintLayout>