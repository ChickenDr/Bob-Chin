<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".AddMeetingActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="제목 : "
                        android:textSize="25dp" />

                <EditText
                        android:id="@+id/edit_text_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="뜨듯한 국밥 먹을 사람" />

            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="누구랑 먹을까?"
                    android:textColor="#FFB03B"
                    android:textSize="20dp" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - 밥친의 연령대 : "
                        android:textColor="#FFB03B"
                        android:textSize="15dp" />

                <EditText
                        android:id="@+id/edit_from_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:ems="10"
                        android:inputType="time"
                        android:textSize="15dp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 세 ~ "
                        android:textColor="#FFB03B"
                        android:textSize="15dp" />

                <EditText
                        android:id="@+id/edit_to_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:ems="10"
                        android:inputType="time"
                        android:textSize="15dp" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 세"
                        android:textColor="#FFB03B"
                        android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="어디서 모일까? "
                        android:textSize="20dp" />

                <Button
                        android:id="@+id/map_button"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="#FFB03B"
                        android:text="지도보기"
                        android:textColor="#FFF"
                        android:textSize="15dp" />

            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="언제 먹을까?"
                    android:textSize="20dp" />

            <CalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="309dp" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- 시작시간 : "
                        android:textSize="15dp" />

                <EditText
                        android:id="@+id/edit_start_hour"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="time" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="시"
                        android:textSize="15dp" />

                <EditText
                        android:id="@+id/edit_start_minute"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="time" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="분"
                        android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- 모임시간 :"
                        android:textSize="15dp" />

                <EditText
                        android:id="@+id/edit_duration"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="time" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="분"
                        android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="몇 명이서? "
                        android:textSize="20dp" />

                <EditText
                        android:id="@+id/edit_text_max_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="3"
                        android:inputType="time" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 명"
                        android:textSize="20dp" />

            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="밥친 소개"
                    android:textSize="20dp" />

            <EditText
                    android:id="@+id/edit_text_content"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:hint="꾹빱 한 그릇 먹을 사람~" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/add_image_guide"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="사진 (예: 먹을 음식, 장소 등등)"
                        android:textSize="15dp" />

                <ImageView
                        android:id="@+id/image_example"
                        android:layout_width="50dp"
                        android:layout_height="match_parent" />

                <Button
                        android:id="@+id/button_add_picture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFB03B"
                        android:text="추가"
                        android:textColor="#FFF"
                        android:textSize="20dp" />

            </LinearLayout>

            <Button
                    android:id="@+id/button_find_bobchin"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="#FFB03B"
                    android:text="밥친 찾기"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>